<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".demo3">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:text="Approaches to Experience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:id="@+id/exper_4">

        <TextView
            android:text="I would have enjoyed being one of the first explorers of an unknown land."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:layout_weight="1" />

        <RadioButton
            android:text="Does not describe me at all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/four_not_at_all"
            android:layout_weight="1" />

        <RadioButton
            android:text="Does not describe me very well"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/four_not_very_well"
            android:layout_weight="1" />

        <RadioButton
            android:text="Describes me somewhat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/four_somewhat"
            android:layout_weight="1" />

        <RadioButton
            android:text="Describes me very well"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/four_very_well"
            android:layout_weight="1" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioGroup3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="245dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/exper_5">

        <TextView
            android:text="I like a movie where there are a lot of explosions and car chases."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:layout_weight="1" />

        <RadioButton
            android:text="Does not describe me at all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/five_not_at_all"
            android:layout_weight="1" />

        <RadioButton
            android:text="Does not describe me very well"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/five_not_very_well"
            android:layout_weight="1" />

        <RadioButton
            android:text="Describes me somewhat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/five_somewhat"
            android:layout_weight="1" />

        <RadioButton
            android:text="Describes me very well"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/five_very_well"
            android:layout_weight="1" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioGroup4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="450dp"
        android:id="@+id/exper_6">

        <TextView
            android:text="I like the feeling of standing next to the edge on a high place and looking down."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:layout_weight="1" />

        <RadioButton
            android:text="Does not describe me at all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/six_not_at_all"
            android:layout_weight="1" />

        <RadioButton
            android:text="Does not describe me very well"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/six_not_very_well"
            android:layout_weight="1" />

        <RadioButton
            android:text="Describes me somewhat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/six_somewhat"
            android:layout_weight="1" />

        <RadioButton
            android:text="Describes me very well"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/six_very_well"
            android:layout_weight="1" />
    </RadioGroup>

</RelativeLayout>