<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".demo3">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:text="Approaches to Experience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" >

        <TextView
            android:text="If I were to go to an amusement park, I would prefer to ride the rollercoaster or other fast rides."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <RadioButton
            android:text="Does not describe me at all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/one_not_at_all"
            android:layout_weight="1" />

        <RadioButton
            android:text="Does not describe me very well"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/one_not_very_well"
            android:layout_weight="1" />

        <RadioButton
            android:text="Describes me somewhat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/one_somewhat"
            android:layout_weight="1" />

        <RadioButton
            android:text="Describes me very well"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/one_very_well"
            android:layout_weight="1" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioGroup3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="245dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/exper_2">

        <TextView
            android:text="I would like to travel to places that are strange and far away."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <RadioButton
            android:text="Does not describe me at all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/two_not_at_all"
            android:layout_weight="1" />

        <RadioButton
            android:text="Does not describe me very well"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/two_not_very_well"
            android:layout_weight="1" />

        <RadioButton
            android:text="Describes me somewhat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/two_somewhat"
            android:layout_weight="1" />

        <RadioButton
            android:text="Describes me very well"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/two_very_well"
            android:layout_weight="1" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioGroup4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="450dp"
        android:id="@+id/exper_3">

        <TextView
            android:text="When taking a trip, I think it is best to make as few plans as possible and just take it as it comes."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <RadioButton
            android:text="Does not describe me at all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/three_not_at_all"
            android:layout_weight="1" />

        <RadioButton
            android:text="Does not describe me very well"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/three_not_very_well"
            android:layout_weight="1" />

        <RadioButton
            android:text="Describes me somewhat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/three_somewhat"
            android:layout_weight="1" />

        <RadioButton
            android:text="Describes me very well"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/three_very_well"
            android:layout_weight="1" />
    </RadioGroup>

</RelativeLayout>