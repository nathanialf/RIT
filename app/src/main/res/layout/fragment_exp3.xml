<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".demo3">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:text="Approaches to Experience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:id="@+id/exper_7">

        <TextView
            android:text="If it were possible to visit another planet or the moon to be among the first in line to sign up."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:layout_weight="1" />

        <RadioButton
            android:text="Does not describe me at all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seven_not_at_all"
            android:layout_weight="1" />

        <RadioButton
            android:text="Does not describe me very well"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seven_not_very_well"
            android:layout_weight="1" />

        <RadioButton
            android:text="Describes me somewhat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seven_somewhat"
            android:layout_weight="1" />

        <RadioButton
            android:text="Describes me very well"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seven_very_well"
            android:layout_weight="1" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioGroup6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="245dp"
        android:id="@+id/exper_8">

        <TextView
            android:text="I can see how it must be exciting to be in a battle during a war."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:layout_weight="1" />

        <RadioButton
            android:text="Does not describe me at all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eight_not_at_all"
            android:layout_weight="1" />

        <RadioButton
            android:text="Does not describe me very well"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eight_not_very_well"
            android:layout_weight="1" />

        <RadioButton
            android:text="Describes me somewhat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eight_somewhat"
            android:layout_weight="1" />

        <RadioButton
            android:text="Describes me very well"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eight_very_well"
            android:layout_weight="1" />
    </RadioGroup>

</RelativeLayout>