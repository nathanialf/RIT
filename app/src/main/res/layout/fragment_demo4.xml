<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".demo3">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:text="Basic Demographics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView3" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Where have you primarily lived during your time in college?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_weight="1" />

        <RadioButton
            android:text="Residence Hall / Dorm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dorm"
            android:layout_weight="1" />

        <RadioButton
            android:text="Apartment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/apt"
            android:layout_weight="1" />

        <RadioButton
            android:text="House or room (not with parents or relatives)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/house"
            android:layout_weight="1" />

        <RadioButton
            android:text="At home with parents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/parents"
            android:layout_weight="1" />

        <RadioButton
            android:text="With family other than parents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/other_family"
            android:layout_weight="1" />

        <RadioButton
            android:text="Other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/other"
            android:layout_weight="1" />
    </RadioGroup>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_marginTop="25dp"
        android:id="@+id/age"
        android:layout_below="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="What age are you?" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText"
        android:hint="With what gender do you identify?"
        android:layout_below="@+id/radioGroup2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="300dp" />

</RelativeLayout>